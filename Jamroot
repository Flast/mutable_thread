import package ;
import path ;

project /mutable_thread
  : build-dir bin.v2
  : requirements
      <link>shared:<find-shared-library>boost_thread
      <link>static:<find-static-library>boost_thread
      <install-source-root>.
  : usage-requirements
      <include>.
      <link>shared:<find-shared-library>boost_thread
      <link>static:<find-static-library>boost_thread
  ;

explicit install ;
alias install : mutable_thread ;
package.install mutable_thread
  : # requirements
  : # binaries
  : # libraries
  : [ path.glob-tree mutable_thread : *.hpp ]
  ;
