import testing ;

project
  : requirements
      <hardcode-dll-paths>true
  ;

local rule test-each ( test : srcs * )
{
    local tests ;
    for local src in $(srcs)
    {
        tests += [ $(test) $(src) ] ;
    }
    return $(tests) ;
}

test-suite mutable_thread
  : [ test-each run : [ glob *.run.cpp ] ]
  ;
